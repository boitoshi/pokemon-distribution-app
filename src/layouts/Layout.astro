---
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  canonicalUrl?: string;
}

const {
  title,
  description = '配信ポケモンを検索できます',
  ogImage = 'https://www.pokebros.net/distribution/ogp-default.png',
  ogType = 'website',
  canonicalUrl
} = Astro.props;

const siteUrl = 'https://www.pokebros.net/distribution';
const fullCanonicalUrl = canonicalUrl || siteUrl;
---

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <title>{title}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={fullCanonicalUrl}>

    <!-- OGP Meta Tags -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:type" content={ogType}>
    <meta property="og:url" content={fullCanonicalUrl}>
    <meta property="og:image" content={ogImage}>
    <meta property="og:site_name" content="配信ポケモン検索データベース">
    <meta property="og:locale" content="ja_JP">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={ogImage}>

    <!-- PWA -->
    <link rel="manifest" href="/distribution/manifest.json">
    <meta name="theme-color" content="#ffbd59">
    <link rel="apple-touch-icon" href="/distribution/icons/icon-192.png">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="配信ポケモン検索">
</head>
<body>
    <div class="container">
        <slot />
    </div>

    <!-- Service Worker Registration -->
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/distribution/sw.js')
                    .then((registration) => {
                        console.log('SW registered:', registration.scope);
                    })
                    .catch((error) => {
                        console.log('SW registration failed:', error);
                    });
            });
        }
    </script>
</body>
</html>

<style is:global>
    :root {
        --color-primary: #ffbd59;
        --color-primary-dark: #e5a63d;
        --color-primary-light: #fff0d4;
        --color-accent: #0099cc;
        --color-accent-dark: #007aa3;
        --color-bg-page: #ecebe1;
        --color-bg-card: #ffffff;
        --color-bg-section: #f5f2ed;
        --color-text-primary: #2c2c2c;
        --color-text-secondary: #666;
        --color-text-muted: #999;
        --color-border: #e0ddd5;
        --color-border-light: #f0ede6;
        --color-shadow: rgba(0, 0, 0, 0.08);
        --color-shadow-hover: rgba(0, 0, 0, 0.14);
        --radius-sm: 6px;
        --radius-md: 10px;
        --radius-lg: 14px;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        background: var(--color-bg-page);
        min-height: 100vh;
        padding: 0;
        font-size: 14px;
        color: var(--color-text-primary);
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px 20px 20px;
    }

    header {
        background: var(--color-primary);
        padding: 18px 24px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        margin-bottom: 16px;
    }

    header h1 {
        color: #333;
        font-size: 22px;
        margin-bottom: 5px;
        font-weight: 700;
    }

    header p {
        color: rgba(0, 0, 0, 0.6);
        font-size: 13px;
    }

    .search-box {
        background: var(--color-bg-card);
        padding: 16px;
        border-radius: var(--radius-md);
        box-shadow: 0 1px 3px var(--color-shadow);
        border: 1px solid var(--color-border);
        margin-bottom: 16px;
    }


    .search-row {
        display: grid;
        grid-template-columns: 2fr 1fr 1.5fr 1.5fr;
        gap: 10px;
        margin-bottom: 12px;
        max-width: 100%;
    }

    /* 条件追加ボタン */
    .add-conditions-btn {
        width: 100%;
        padding: 8px;
        background: var(--color-bg-section);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-sm);
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        margin-bottom: 12px;
        color: var(--color-text-secondary);
    }

    .add-conditions-btn:hover {
        background: var(--color-primary-light);
        border-color: var(--color-primary);
    }

    /* 検索条件 */
    .search-conditions {
        margin-bottom: 12px;
        padding: 12px;
        background: var(--color-bg-section);
        border-radius: var(--radius-sm);
        border: 1px solid var(--color-border);
    }

    .conditions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 12px;
        align-items: center;
    }

    .condition-checkbox {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        background: var(--color-bg-card);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-sm);
        font-size: 14px;
        cursor: pointer;
        user-select: none;
        transition: all 0.15s ease;
    }

    .condition-checkbox:hover {
        background: var(--color-primary-light);
        border-color: var(--color-primary);
    }

    .condition-checkbox:has(input:checked) {
        background: var(--color-primary-light);
        border-color: var(--color-primary);
    }

    .condition-checkbox input[type="checkbox"] {
        width: 18px;
        height: 18px;
        cursor: pointer;
        accent-color: var(--color-primary-dark);
    }

    .ribbon-input-wrapper {
        grid-column: 1 / -1;
    }

    .ribbon-input {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 14px;
        background: white;
    }

    .ribbon-input:focus {
        outline: none;
        border-color: var(--color-primary);
        box-shadow: 0 0 0 2px rgba(255, 189, 89, 0.2);
    }

    /* 逆引き検索エリア */
    .reverse-search-section {
        margin-top: 15px;
        padding-top: 15px;
        border-top: 2px solid #e0e0e0;
    }

    .reverse-search-title {
        font-size: 13px;
        font-weight: 600;
        color: var(--color-accent);
        margin-bottom: 10px;
    }

    .reverse-search-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 10px;
    }

    /* 検索ボタンエリア */
    .search-buttons {
        display: flex;
        gap: 10px;
    }

    .search-button {
        flex: 1;
        padding: 12px;
        background: var(--color-primary);
        color: #333;
        border: none;
        border-radius: var(--radius-sm);
        font-size: 15px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 2px 6px rgba(255, 189, 89, 0.3);
    }

    .search-button:hover {
        background: var(--color-primary-dark);
        box-shadow: 0 4px 12px rgba(255, 189, 89, 0.4);
    }

    .clear-button {
        padding: 10px 20px;
        background: var(--color-bg-card);
        border: 2px solid var(--color-border);
        border-radius: var(--radius-sm);
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        color: var(--color-text-secondary);
        white-space: nowrap;
    }

    .clear-button:hover {
        background: var(--color-bg-section);
        border-color: #b0b0b0;
        color: #333;
    }

    input, select {
        padding: 8px 10px;
        border: 1px solid var(--color-border);
        border-radius: var(--radius-sm);
        font-size: 16px;
        transition: border-color 0.2s;
    }

    input:focus, select:focus {
        outline: none;
        border-color: var(--color-primary);
    }

    button {
        background: var(--color-accent);
        color: white;
        border: none;
        padding: 8px 20px;
        border-radius: var(--radius-sm);
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        white-space: nowrap;
    }

    button:hover {
        background: var(--color-accent-dark);
    }

    .filter-label {
        position: relative;
        cursor: pointer;
        display: inline-block;
    }

    /* チェックボックスを視覚的に隠す */
    .filter-checkbox {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    /* アイコンボックス */
    .filter-icon-box {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 56px;
        height: 56px;
        background: var(--color-bg-section);
        border: 3px solid var(--color-border);
        border-radius: 12px;
        transition: all 0.2s ease;
    }

    .filter-icon {
        font-size: 28px;
        line-height: 1;
        user-select: none;
    }

    /* ホバー時（マウスデバイスのみ） */
    @media (hover: hover) {
        .filter-label:hover .filter-icon-box {
            background: var(--color-primary-light);
            border-color: var(--color-primary);
            transform: translateY(-2px);
        }
    }

    /* チェック時 */
    .filter-checkbox:checked + .filter-icon-box {
        background: var(--color-primary-light);
        border-color: var(--color-primary-dark);
        border-width: 3px;
        box-shadow: 0 0 0 3px rgba(255, 189, 89, 0.2);
    }

    /* チェック時のアイコン拡大 */
    .filter-checkbox:checked + .filter-icon-box .filter-icon {
        transform: scale(1.1);
    }

    .stats {
        background: var(--color-bg-card);
        padding: 12px 15px;
        border-radius: var(--radius-sm);
        margin-bottom: 16px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 15px;
        font-size: 12px;
        color: var(--color-text-secondary);
        flex-wrap: wrap;
        border: 1px solid var(--color-border);
    }

    .stats-left {
        font-weight: 600;
    }

    /* 素早い絞り込みボタン */
    .quick-filters {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .quick-filter-btn {
        display: flex;
        align-items: center;
        gap: 4px;
        padding: 6px 12px;
        background: var(--color-bg-card);
        border: 2px solid var(--color-border);
        border-radius: var(--radius-sm);
        cursor: pointer;
        transition: all 0.2s;
        user-select: none;
        color: var(--color-text-primary);
    }

    .quick-filter-btn:hover {
        background: var(--color-primary-light);
        border-color: var(--color-primary);
    }

    .quick-filter-btn.active {
        background: var(--color-primary);
        border-color: var(--color-primary-dark);
        color: #333;
        font-weight: 600;
    }

    .quick-icon {
        font-size: 16px;
        line-height: 1;
    }

    .quick-text {
        font-size: 12px;
        font-weight: 600;
    }

    .results {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
        gap: 16px;
    }

    .pokemon-card {
        position: relative;
        background: var(--color-bg-card);
        border-radius: var(--radius-md);
        padding: 14px;
        box-shadow: 0 1px 3px var(--color-shadow),
                    0 4px 12px rgba(0, 0, 0, 0.04);
        transition: transform 0.2s, box-shadow 0.2s, border-color 0.2s;
        cursor: pointer;
        border: 1px solid var(--color-border);
    }

    .pokemon-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 4px 8px var(--color-shadow-hover),
                    0 12px 24px rgba(0, 0, 0, 0.08);
        border-color: var(--color-primary);
    }

    /* カードレイアウト: 画像 + コンテンツ */
    .card-layout {
        display: flex;
        gap: 12px;
        align-items: flex-start;
    }

    .card-image-container {
        flex-shrink: 0;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--color-bg-section);
        border-radius: var(--radius-sm);
        overflow: hidden;
    }

    .pokemon-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.2s;
    }

    .pokemon-card:hover .pokemon-image {
        transform: scale(1.1);
    }

    .card-content {
        flex: 1;
        min-width: 0; /* Flexboxで要素が縮小できるようにする */
    }

    .compact-section {
        /* コンパクト表示は常に表示 */
    }

    /* Modal styles */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.6);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        padding: 20px;
        animation: fadeIn 0.2s ease;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .modal-content {
        background: white;
        border-radius: 12px;
        max-width: 900px;
        width: 100%;
        max-height: 90vh;
        overflow-y: auto;
        position: relative;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        animation: slideUp 0.3s ease;
    }

    @keyframes slideUp {
        from {
            transform: translateY(30px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .modal-close {
        position: absolute;
        top: 15px;
        right: 15px;
        width: 36px;
        height: 36px;
        border: none;
        background: none;
        padding: 0;
        cursor: pointer;
        transition: transform 0.2s;
        z-index: 1;
    }

    .modal-close:hover {
        transform: scale(1.1) rotate(15deg);
    }

    .pokeball-close {
        display: block;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        position: relative;
        background: linear-gradient(to bottom, #ee1515 0%, #ee1515 50%, #ffffff 50%, #ffffff 100%);
        border: 3px solid #222;
        box-shadow: 0 2px 8px rgba(0,0,0,0.3);
    }

    .pokeball-close::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: #ffffff;
        border: 3px solid #222;
        box-shadow: inset 0 1px 3px rgba(0,0,0,0.3);
    }

    .pokeball-close::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 3px;
        background: #222;
        transform: translateY(-50%);
    }

    .modal-body {
        padding: 30px;
    }

    .modal-header {
        display: flex;
        gap: 20px;
        margin-bottom: 25px;
        padding-bottom: 20px;
        border-bottom: 2px solid #f0f0f0;
        align-items: flex-start;
    }

    .modal-header-image {
        flex-shrink: 0;
        width: 120px;
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--color-bg-section);
        border-radius: var(--radius-lg);
        overflow: hidden;
    }

    .modal-pokemon-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .modal-header-content {
        flex: 1;
        min-width: 0;
    }

    .modal-header h2 {
        font-size: 24px;
        color: #222;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .modal-shiny-indicator {
        font-size: 20px;
        line-height: 1;
        cursor: help;
    }

    .modal-badges {
        margin-bottom: 8px;
    }


    .modal-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 20px;
    }

    .modal-section {
        background: var(--color-bg-section);
        padding: 15px;
        border-radius: var(--radius-sm);
    }

    .modal-section h3 {
        font-size: 14px;
        color: var(--color-text-primary);
        margin-bottom: 12px;
        font-weight: 700;
        border-bottom: 2px solid var(--color-primary);
        padding-bottom: 8px;
    }

    .modal-ribbons-section,
    .modal-notes-section {
        grid-column: 1 / -1;
    }

    .modal-moves {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
    }

    .move-item {
        background: none;
        color: var(--color-text-primary);
        padding: 0;
        font-size: 12px;
        font-weight: 400;
    }

    .move-item:not(:last-child)::after {
        content: ' /';
        color: var(--color-text-muted);
    }

    .modal-ribbons {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    .modal-notes {
        font-size: 12px;
        color: #666;
        line-height: 1.6;
    }

    .modal-footer {
        text-align: center;
        padding-top: 15px;
        border-top: 1px solid #f0f0f0;
    }

    @media (max-width: 768px) {
        .modal-grid {
            grid-template-columns: 1fr;
        }

        .modal-trainer-section,
        .modal-moves-section {
            grid-column: 1 / -1;
        }

        .modal-body {
            padding: 20px;
        }

        .modal-header {
            flex-direction: row;
            align-items: flex-start;
            gap: 12px;
        }

        .modal-header-image {
            width: 60px;
            height: 60px;
        }

        .modal-header-content {
            text-align: left;
            flex: 1;
        }

        .modal-header h2 {
            font-size: 16px;
            justify-content: flex-start;
        }

        .modal-dex-number {
            font-size: 12px;
            margin-bottom: 4px;
        }

        .modal-content {
            max-height: 85vh;
        }
    }

    .pokemon-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
        padding-bottom: 10px;
        border-bottom: 2px solid #f5f5f5;
    }

    .pokemon-name {
        font-size: 18px;
        font-weight: bold;
        color: #222;
    }

    .dex-number {
        display: inline-block;
        font-size: 14px;
        font-weight: 600;
        color: var(--color-accent);
        margin-left: 8px;
    }

    .modal-dex-number {
        font-size: 24px;
        font-weight: 700;
        color: var(--color-accent);
        margin-bottom: 8px;
    }


    /* Hide PC-only elements on mobile */
    @media (max-width: 768px) {
        .pc-only {
            display: none !important;
        }
        .mobile-only {
            display: inline-block !important;
        }
    }

    /* Hide mobile-only elements on PC */
    @media (min-width: 769px) {
        .mobile-only {
            display: none !important;
        }
    }

    .icon-badge {
        display: inline-block;
        font-size: 16px;
        margin-left: 5px;
        cursor: help;
        line-height: 1;
    }

    .text-badge {
        display: inline-block;
        background: var(--color-primary-light);
        color: var(--color-primary-dark);
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 600;
        margin-right: 5px;
    }

    .tera-type-badge {
        display: inline-block;
        background: #fff3e0;
        color: #e65100;
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 11px;
        font-weight: 600;
        margin-left: 5px;
        cursor: help;
    }

    .info-row {
        display: flex;
        margin-bottom: 4px;
        font-size: 12px;
    }

    .info-label {
        font-weight: 600;
        color: #555;
        min-width: 90px;
        font-size: 11px;
    }

    .info-value {
        color: #333;
        flex: 1;
        font-size: 12px;
    }

    .compact-stats .info-label {
        min-width: 0;
    }

    .stats-inline {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        font-size: 11px;
    }

    .stats-inline > span {
        white-space: nowrap;
    }

    .generation-badge {
        display: inline-block;
        padding: 3px 10px;
        border-radius: 4px;
        font-weight: 600;
        font-size: 11px;
        color: var(--color-text-primary);
        background: var(--color-bg-section);
        border-left: 3px solid;
    }

    .gen-9 { border-color: #e53935; }
    .gen-8 { border-color: #00897b; }
    .gen-7 { border-color: #8e24aa; }
    .gen-6 { border-color: #1e88e5; }


    .moves {
        display: flex;
        flex-wrap: wrap;
        gap: 5px;
        margin-top: 3px;
    }

    .move-tag {
        background: #e8f5e9;
        color: #2e7d32;
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 11px;
    }

    .ribbon-tag {
        background: #fff3e0;
        color: #e65100;
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 11px;
    }

    .ribbon-icon {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        background: var(--color-bg-card);
        color: var(--color-text-primary);
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 12px;
        border: 1px solid var(--color-border);
    }

    .ribbon-icon img,
    .ball-icon-img {
        width: 20px;
        height: 20px;
        object-fit: contain;
        vertical-align: middle;
    }

    .modal-password {
        font-family: 'Courier New', Courier, monospace;
        font-size: 15px;
